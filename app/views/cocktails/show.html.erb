<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose|  %>
    <li>
      <%= dose.ingredient.name %> : <%= dose.description %>
      <%= link_to "delete", dose_path(dose) method: delete %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %> </br>
<%= link_to 'Back to all cocktails', cocktails_path %>
